<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="511.0" prefWidth="776.0" spacing="20.0" styleClass="bg-container" stylesheets="@styles/style.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.justmeandcode.otp_generator.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label text="OTP Generator" textFill="#3668cf">
            <font>
               <Font name="System Bold" size="27.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label fx:id="OTP_VALUE" text="########">
            <font>
               <Font size="25.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
      <children>
         <Slider fx:id="OTP_size_slider" accessibleRole="IMAGE_VIEW" majorTickUnit="1.0" max="20.0" maxWidth="-Infinity" min="5.0" onDragDetected="#onSlide" prefHeight="35.0" prefWidth="300.0" showTickLabels="true" showTickMarks="true" styleClass="container" stylesheets="@styles/style.css" value="6.0" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
      <children>
         <RadioButton fx:id="numericRadioButton" mnemonicParsing="false" onAction="#onChooseNumeric" text="numeric" />
         <RadioButton fx:id="alphaNumericRadioButton" mnemonicParsing="false" onAction="#onChooseAlphaNumeric" text="Alphanumeric" />
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Label fx:id="notification" alignment="CENTER" prefHeight="46.0" prefWidth="329.0" textFill="GREEN">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </children>
   </HBox>
   <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
      <children>
         <Button id="generate_button" fx:id="generate_otp_code" mnemonicParsing="false" onAction="#onGenerateOTPCode" prefHeight="41.0" prefWidth="166.0" stylesheets="@styles/style.css" text="Generate OTP Code" />
      </children>
   </HBox>
</VBox>
